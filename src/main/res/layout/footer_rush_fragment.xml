<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <View
        android:id="@+id/footer_rush_fragment_line1"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/footer_rush_fragment_followUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follow_us"
        android:layout_below="@+id/footer_rush_fragment_line1"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />

    <View
        android:id="@+id/footer_rush_fragment_line2"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/footer_rush_fragment_followUs"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/footer_rush_fragment_line2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_rush_fragment_facebook"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            />
        <ImageView
            android:id="@+id/footer_rush_fragment_twitter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            />
        <ImageView
            android:id="@+id/footer_rush_fragment_snapchat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            />
        <ImageView
            android:id="@+id/footer_rush_fragment_instagram"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            />

    </LinearLayout>


</RelativeLayout>