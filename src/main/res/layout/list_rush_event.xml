<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="2dp"
    app:cardElevation="5dp"
    android:background="@drawable/rush_background_cards"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:background="@drawable/rush_background_cards"
        >

        <LinearLayout
            android:id="@+id/list_rush_event_name_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_rush_event_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                android:layout_weight="0.5"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/list_rush_event_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                />

        </LinearLayout>

        <View
            android:id="@+id/list_rush_event_live1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/list_rush_event_name_layout"
            android:background="#000000"
            />

        <TextView
            android:id="@+id/list_rush_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_rush_event_live1"
            android:text="Location"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/list_rush_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_below="@+id/list_rush_event_location"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>