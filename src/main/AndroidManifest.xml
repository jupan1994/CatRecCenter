<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pjokk.jupan.catscareer">


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".infrastructure.CatApplication"
        >
        <activity android:name=".activities.SplashScreenActivity"
                  android:screenOrientation="portrait"
                  android:theme="@style/SplashScreenStyle"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.CatPagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomDialogActivity"
            />

        <activity
            android:name=".activities.PhotoPagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomDialogActivity"
            />

        <activity
            android:name=".activities.YoutubeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/YoutubeDialog"
            />

        <activity android:name=".activities.ActivityMaps"
                  android:screenOrientation="portrait"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
            />

        <activity android:name=".activities.CampusMapActivity"
                  android:screenOrientation="portrait"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
            />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBj7kRQN9r0jv-ULUG0vokqLBjzulTKwqU"
